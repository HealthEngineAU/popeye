<?xml version="1.0"?>
<ruleset name="Popeye coding standard">
    <description>Popeye coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- set basepath to `.` -->
    <arg name="basepath" value=""/>

    <!-- use PSR2 standard -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- paths to check -->
    <file>src</file>
    <file>tests</file>
</ruleset>
